---
import type { Category } from '../services/jobService';

interface Props {
  category: Category;
}

const { category } = Astro.props;
---

<a
  href={`/categories/${category.name.toLowerCase().replace(/\s+/g, '-')}`}
  class="card-hover p-6 text-center group block"
>
  <div class="w-12 h-12 mx-auto mb-4 bg-primary/10 text-primary rounded-lg flex items-center justify-center group-hover:bg-primary group-hover:text-white transition-colors">
    <span class="material-icons">{category.icon}</span>
  </div>
  <h3 class="font-semibold text-slate-900 dark:text-white">{category.name}</h3>
  <p class="text-xs text-slate-400 mt-1">{category.count} jobs</p>
</a>
