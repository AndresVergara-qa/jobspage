---
import Layout from '../../layouts/Layout.astro';
import JobCard from '../../components/JobCard.astro';
import { getJobById, fetchJobs, timeAgo, getInitials } from '../../services/jobService';

export async function getStaticPaths() {
  const jobs = await fetchJobs();
  return jobs.map((job) => ({
    params: { id: job.id },
    props: { job },
  }));
}

const { job } = Astro.props;

if (!job) {
  return Astro.redirect('/404');
}

const allJobs = await fetchJobs();
const relatedJobs = allJobs
  .filter((j) => j.category === job.category && j.id !== job.id)
  .slice(0, 3);

const posted = timeAgo(job.postedAt);
---

<Layout title={`${job.title} | JobRadar`}>
  <!-- Breadcrumbs -->
  <div class="section-container py-4">
    <nav class="flex items-center gap-2 text-xs font-medium text-slate-500 uppercase tracking-wider">
      <a class="hover:text-primary" href="/">Home</a>
      <span class="material-icons text-[14px]">chevron_right</span>
      <a class="hover:text-primary" href={`/categories/${job.category.toLowerCase().replace(/\s+/g, '-')}`}>{job.category}</a>
      <span class="material-icons text-[14px]">chevron_right</span>
      <span class="text-slate-900 dark:text-slate-100">{job.title}</span>
    </nav>
  </div>

  <!-- Main Content -->
  <div class="section-container pb-20">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
      <!-- Left Column: Job Details -->
      <div class="lg:col-span-8">
        <!-- Job Header Card -->
        <div class="card p-6 md:p-8 mb-6">
          <div class="flex flex-col md:flex-row md:items-start justify-between gap-6">
            <div class="flex gap-5">
              <div class="w-16 h-16 rounded-xl bg-slate-100 dark:bg-slate-800 flex items-center justify-center overflow-hidden flex-shrink-0">
                {job.logoUrl ? (
                  <img alt={`${job.company} Logo`} class="w-full h-full object-cover" src={job.logoUrl} />
                ) : (
                  <span class="text-primary font-bold text-2xl">{getInitials(job.company)}</span>
                )}
              </div>
              <div>
                <h1 class="text-2xl md:text-3xl font-bold text-slate-900 dark:text-white leading-tight">{job.title}</h1>
                <div class="flex flex-wrap items-center gap-y-2 gap-x-4 mt-2 text-slate-600 dark:text-slate-400">
                  <div class="flex items-center gap-1 font-medium text-primary">
                    <span>{job.company}</span>
                    {job.isVerified && <span class="material-icons text-[16px]">verified</span>}
                  </div>
                  <div class="flex items-center gap-1">
                    <span class="material-icons text-[18px]">location_on</span>
                    <span>{job.location}</span>
                  </div>
                  <div class="flex items-center gap-1">
                    <span class="material-icons text-[18px]">schedule</span>
                    <span>Posted {posted}</span>
                  </div>
                </div>
              </div>
            </div>
            <div class="flex flex-col gap-3">
              {job.salary && (
                <div class="tag-primary self-start md:self-end font-bold">
                  {job.salary}
                </div>
              )}
              <a
                href={job.applicationUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="btn-primary text-center shadow-primary-lg"
              >
                Apply on Official Site
              </a>
            </div>
          </div>
        </div>

        <!-- Content Card -->
        <div class="card p-6 md:p-8">
          <article class="prose prose-slate dark:prose-invert max-w-none">
            <!-- Description -->
            <section class="mb-10">
              <h2 class="text-xl font-bold mb-4 text-slate-900 dark:text-white flex items-center gap-2">
                <span class="w-1.5 h-6 bg-primary rounded-full"></span>
                Job Description
              </h2>
              <p class="text-slate-600 dark:text-slate-400 leading-relaxed">
                {job.description}
              </p>
            </section>

            <!-- Responsibilities -->
            {job.responsibilities && job.responsibilities.length > 0 && (
              <section class="mb-10">
                <h2 class="text-xl font-bold mb-4 text-slate-900 dark:text-white flex items-center gap-2">
                  <span class="w-1.5 h-6 bg-primary rounded-full"></span>
                  Key Responsibilities
                </h2>
                <ul class="space-y-3">
                  {job.responsibilities.map((item) => (
                    <li class="flex items-start gap-3 text-slate-600 dark:text-slate-400">
                      <span class="material-icons text-primary mt-0.5 text-[20px]">check_circle</span>
                      <span>{item}</span>
                    </li>
                  ))}
                </ul>
              </section>
            )}

            <!-- Requirements -->
            {job.requirements && job.requirements.length > 0 && (
              <section class="mb-10">
                <h2 class="text-xl font-bold mb-4 text-slate-900 dark:text-white flex items-center gap-2">
                  <span class="w-1.5 h-6 bg-primary rounded-full"></span>
                  Requirements
                </h2>
                <ul class="space-y-3">
                  {job.requirements.map((item) => (
                    <li class="flex items-start gap-3 text-slate-600 dark:text-slate-400">
                      <span class="material-icons text-primary mt-0.5 text-[20px]">arrow_forward</span>
                      <span>{item}</span>
                    </li>
                  ))}
                </ul>
              </section>
            )}
          </article>

          <!-- Bottom CTA -->
          <div class="mt-12 pt-8 border-t border-slate-100 dark:border-slate-800 text-center">
            <a
              href={job.applicationUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="btn-primary inline-block text-lg px-10 py-4 shadow-primary-lg"
            >
              Apply on Official Site
            </a>
            <p class="text-xs text-slate-500 dark:text-slate-500 italic max-w-sm mx-auto mt-3">
              You will be redirected to the company's official site to complete your application. JobRadar ensures all external links are verified and secure.
            </p>
          </div>
        </div>
      </div>

      <!-- Right Column: Sidebar -->
      <aside class="lg:col-span-4">
        <div class="sticky top-24 space-y-6">
          <!-- Related Jobs -->
          {relatedJobs.length > 0 && (
            <div class="card overflow-hidden">
              <div class="p-5 border-b border-slate-100 dark:border-slate-800 bg-slate-50/50 dark:bg-slate-800/50">
                <h3 class="font-bold text-slate-900 dark:text-white">Related Jobs</h3>
              </div>
              <div class="divide-y divide-slate-100 dark:divide-slate-800">
                {relatedJobs.map((rj) => (
                  <a class="block p-5 hover:bg-slate-50 dark:hover:bg-slate-800/50 transition-colors group" href={`/jobs/${rj.id}`}>
                    <div class="flex gap-4">
                      <div class="w-10 h-10 rounded bg-slate-100 dark:bg-slate-700 flex-shrink-0 flex items-center justify-center">
                        <span class="text-primary font-bold text-sm">{getInitials(rj.company)}</span>
                      </div>
                      <div>
                        <h4 class="font-semibold text-sm group-hover:text-primary transition-colors">{rj.title}</h4>
                        <p class="text-xs text-slate-500 mt-1">{rj.company}</p>
                        <div class="flex items-center gap-2 mt-2">
                          <span class="text-[10px] font-bold uppercase tracking-wider text-slate-400">{rj.location}</span>
                          {rj.salary && (
                            <>
                              <span class="text-slate-300 dark:text-slate-700">â€¢</span>
                              <span class="text-[10px] font-bold uppercase tracking-wider text-primary">{rj.salary}</span>
                            </>
                          )}
                        </div>
                      </div>
                    </div>
                  </a>
                ))}
              </div>
            </div>
          )}

          <!-- Alert CTA -->
          <div class="bg-primary rounded-xl p-6 text-white overflow-hidden relative">
            <div class="relative z-10">
              <h4 class="font-bold text-lg mb-2">Want to work here?</h4>
              <p class="text-white/80 text-sm mb-4">Set up an alert to get notified about new openings at {job.company}.</p>
              <button class="w-full bg-white text-primary font-bold py-2.5 rounded-lg text-sm transition-transform active:scale-95 hover:bg-slate-50">
                Create Alert
              </button>
            </div>
            <span class="material-icons absolute -bottom-6 -right-6 text-white/10 text-[8rem]">notifications_active</span>
          </div>
        </div>
      </aside>
    </div>
  </div>
</Layout>
