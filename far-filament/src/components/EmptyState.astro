---
interface Props {
  title?: string
  message?: string
  icon?: string
}

const { title = "No results", message = "Try adjusting your search or filters.", icon = "search_off" } = Astro.props
---

<div class="text-center py-16">
  <div class="w-20 h-20 mx-auto mb-6 bg-slate-100 dark:bg-slate-800 rounded-full flex items-center justify-center">
    <span class="material-icons text-4xl text-slate-300 dark:text-slate-600">{icon}</span>
  </div>
  <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-2">{title}</h3>
  <p class="text-slate-500 dark:text-slate-400 max-w-md mx-auto">{message}</p>
</div>
