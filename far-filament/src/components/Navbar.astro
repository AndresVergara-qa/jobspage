---
const currentPath = Astro.url.pathname;

const navLinks = [
  { label: 'Jobs', href: '/' },
  { label: 'Categories', href: '/categories' },
  { label: 'Blog', href: '/blog' },
  { label: 'About', href: '/about' },
];
---

<header class="sticky top-0 z-50 w-full bg-white/95 dark:bg-background-dark/95 border-b border-primary/10 backdrop-blur-md">
  <div class="section-container">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 group">
        <div class="w-10 h-10 bg-primary rounded-lg flex items-center justify-center group-hover:scale-105 transition-transform">
          <span class="material-icons text-white">radar</span>
        </div>
        <span class="text-xl font-bold text-primary tracking-tight">JobRadar</span>
      </a>

      <!-- Desktop Nav -->
      <nav class="hidden md:flex space-x-8">
        {navLinks.map((link) => (
          <a
            class:list={[
              'font-medium transition-colors',
              currentPath === link.href
                ? 'text-primary'
                : 'text-slate-600 dark:text-slate-300 hover:text-primary dark:hover:text-primary',
            ]}
            href={link.href}
          >
            {link.label}
          </a>
        ))}
      </nav>

      <!-- Actions -->
      <div class="flex items-center gap-3">
        <a href="/login" class="btn-ghost hidden sm:inline-flex">Login</a>
        <a href="/login" class="btn-primary text-sm">Register</a>
        <!-- Mobile Menu Toggle -->
        <button id="mobile-menu-btn" class="md:hidden p-2 text-slate-600 dark:text-slate-300 hover:text-primary" aria-label="Toggle menu">
          <span class="material-icons">menu</span>
        </button>
      </div>
    </div>

    <!-- Mobile Nav -->
    <nav id="mobile-menu" class="hidden md:hidden pb-4 border-t border-slate-100 dark:border-slate-800 mt-2 pt-4">
      <div class="flex flex-col gap-3">
        {navLinks.map((link) => (
          <a
            class:list={[
              'font-medium py-2 px-3 rounded-lg transition-colors',
              currentPath === link.href
                ? 'text-primary bg-primary/5'
                : 'text-slate-600 dark:text-slate-300 hover:text-primary hover:bg-primary/5',
            ]}
            href={link.href}
          >
            {link.label}
          </a>
        ))}
      </div>
    </nav>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
