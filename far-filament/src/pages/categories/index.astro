---
import Layout from '../../layouts/Layout.astro';
import CategoryCard from '../../components/CategoryCard.astro';
import { categories } from '../../services/jobService';
---

<Layout title="Job Categories | JobRadar">
  <section class="py-16">
    <div class="section-container">
      <div class="text-center mb-12">
        <h1 class="text-3xl font-bold text-slate-900 dark:text-white mb-4">Explore by Category</h1>
        <p class="text-slate-600 dark:text-slate-400 max-w-xl mx-auto">
          Browse verified job listings organized by industry and function.
        </p>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        {categories.map((cat) => (
          <CategoryCard category={cat} />
        ))}
      </div>
    </div>
  </section>
</Layout>
