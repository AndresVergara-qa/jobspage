---
import Layout from '../../layouts/Layout.astro';
import JobCard from '../../components/JobCard.astro';
import EmptyState from '../../components/EmptyState.astro';
import { fetchJobsByCategory, categories } from '../../services/jobService';

export async function getStaticPaths() {
  return categories.map((cat) => ({
    params: { slug: cat.name.toLowerCase().replace(/\s+/g, '-') },
    props: { categoryName: cat.name, icon: cat.icon },
  }));
}

const { categoryName, icon } = Astro.props;
const jobs = await fetchJobsByCategory(categoryName);
---

<Layout title={`${categoryName} Jobs | JobRadar`}>
  <section class="py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="flex items-center gap-4 mb-8">
        <div class="w-14 h-14 bg-primary/10 text-primary rounded-xl flex items-center justify-center">
          <span class="material-icons text-2xl">{icon}</span>
        </div>
        <div>
          <h1 class="text-2xl font-bold text-slate-900 dark:text-white">{categoryName} Jobs</h1>
          <p class="text-slate-500 text-sm mt-1">
            {jobs.length} verified listing{jobs.length !== 1 ? 's' : ''} found
          </p>
        </div>
      </div>

      <!-- Job list -->
      {jobs.length > 0 ? (
        <div class="space-y-4">
          {jobs.map((job) => (
            <JobCard job={job} />
          ))}
        </div>
      ) : (
        <EmptyState
          title={`No ${categoryName} jobs yet`}
          message="Check back soon â€” new listings are added daily."
          icon="work_off"
        />
      )}

      <!-- Back link -->
      <div class="mt-10 text-center">
        <a href="/categories" class="text-primary font-semibold hover:underline flex items-center justify-center gap-1">
          <span class="material-icons text-sm">arrow_back</span>
          All Categories
        </a>
      </div>
    </div>
  </section>
</Layout>
